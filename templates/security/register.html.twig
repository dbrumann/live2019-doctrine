{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Register for a new account</h1>

    {% if error %}
        <div class="alert alert-danger">
            <strong>Registration failed</strong> {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <form action="{{ path('register') }}" method="post" class="mt-4">
        <div class="mb-3">
            <label for="displayname">Display Name:</label>
            <input type="text" id="displayname" name="displayname" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="username">Email:</label>
            <input type="text" id="username" name="username" class="form-control" />
        </div>

        <div class="mb-3">
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" class="form-control" />
        </div>

        <div class="mb-3">
            <button type="submit" class="btn btn-success">Register</button>&emsp;
            <a href="{{ path('login') }}">Back to login</a>
        </div>
    </form>

{% endblock %}
